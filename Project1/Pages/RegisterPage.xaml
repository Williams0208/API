<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project1.Pages.RegisterPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Nombre" Text="{Binding Name}"/>
            <Entry Placeholder="Nombre de usuario" Text="{Binding UserName}"/>
            <Entry Placeholder="Contraseña" IsPassword="True" Text="{Binding Password}"/>
            <Button Command="{Binding RegisterCommand}" Text="Crear cuenta"/>
            <Button Command="{Binding GoToLoginPageCommand}" Text="Ir a pagina de login"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>